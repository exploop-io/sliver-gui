# SliverUI Configuration
# Copy this file to .env and modify as needed

# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-secure-random-string-at-least-32-chars

# Database
DATABASE_URL=sqlite:///./data/sliverui.db

# Redis
REDIS_URL=redis://redis:6379/0

# Sliver
# Path to your Sliver operator configuration file
SLIVER_CONFIG=/app/config/operator.cfg

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=7

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
